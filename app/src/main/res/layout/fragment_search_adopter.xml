<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchAdopterTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchAdopterFirstNameLabel"
        android:id="@+id/searchAdopterFirstNameLabel"
        android:layout_marginTop="30dp"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:hint="@string/searchAdopterFirstNameLabel"
        android:ems="10"
        android:id="@+id/searchAdopterFirstNameEditText"
        android:layout_below="@+id/searchAdopterFirstNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchAdopterLastnameLabel"
        android:id="@+id/searchAdopterLastnameLabel"
        android:layout_marginTop="30dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_below="@+id/searchAdopterFirstNameEditText"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:hint="@string/searchAdopterLastnameLabel"
        android:ems="10"
        android:id="@+id/searchAdopterLastnameEditText"
        android:layout_below="@+id/searchAdopterLastnameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchAdopterButton"
        android:text="@string/searchButtonLabel"
        android:layout_marginTop="39dp"
        android:onClick="searchAdopter"
        android:layout_below="@+id/searchAdopterLastnameEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>