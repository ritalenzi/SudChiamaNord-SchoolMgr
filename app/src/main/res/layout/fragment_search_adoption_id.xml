<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchAdoptionCodeLabel"
        android:id="@+id/searchAdoptionCodeLabel"
        android:layout_marginTop="30dp"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/searchAdoptionCodeLabel"
        android:ems="10"
        android:id="@+id/searchAdoptionCodeEditText"
        android:layout_below="@+id/searchAdoptionCodeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchAdoptionIdButton"
        android:text="@string/searchButtonLabel"
        android:layout_marginTop="41dp"
        android:onClick="searchAdoptionId"
        android:layout_below="@+id/searchAdoptionCodeEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>